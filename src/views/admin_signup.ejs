<%- include("./layout/header") %>
    <main class="product-details">
        <h2>Admin Signup</h2>
        <p class="error"><%= error %></p>
        <div class="form-container">
            <form action="/admin/signup" method="post">
                <div>
                    <label for="name">
                        <p>First Name</p>
                    </label>
                    <input type="text" name="fname" value="<%= form[0]?.fname %>">
                </div>
                <div>
                    <label for="name">
                        <p>Last Name</p>
                    </label>
                    <input type="text" name="lname" value="<%= form[0]?.lname %>">
                </div>
                <div>
                    <label for="email">
                        <p>Email</p>
                    </label>
                    <input type="email" name="email" value="<%= form[0]?.email %>">
                </div>
                <div>
                    <label for="password">
                        <p>Password</p>
                    </label>
                    <input type="password" name="password" id="" value="<%= form[0]?.password %>">
                </div>
                <input type="submit" value="Signup">
            </form>
        </div>
    </main>
<%- include("./layout/footer") %>