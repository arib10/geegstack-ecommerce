<%- include("./layout/header") %>
    <main class="product-details">
        <h2>Admin Login</h2>
        <p class="error"><%= error %></p>
        <div class="form-container">
            <form action="/admin/login" method="post">
                <div>
                    <label for="email">
                        <p>Email</p>
                    </label>
                    <input type="email" name="email" value="<%= form[0]?.email %>">
                </div>
                <div>
                    <label for="password">
                        <p>Password</p>
                    </label>
                    <input type="password" name="password" value="<%= form[0]?.password %>">
                </div>
                <input type="submit" value="Login">
            </form>
        </div>
    </main>
<%- include("./layout/footer") %>